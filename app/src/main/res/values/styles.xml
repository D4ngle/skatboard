<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">25sp</item>
    </style>

    <style name="EqualLayoutHorizontal" parent="AppTheme">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="EqualButton" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">@drawable/toggle_check</item>
    </style>

    <style name="PlayerButton" parent="EqualButton">
        <item name="android:textSize">@dimen/abc_text_size_display_2_material</item>
        <item name="android:textOn">@string/icon_player_won</item>
        <item name="android:textOff">@string/icon_player_lost</item>
    </style>

    <style name="GameInfoText" parent="AppTheme">
        <item name="android:layout_gravity">end</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <style name="GameInfoToggle" parent="AppTheme">
        <item name="android:layout_gravity">start</item>
        <item name="android:padding">16dp</item>
    </style>


</resources>
